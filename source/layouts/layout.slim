    meta[charset="utf-8"]
    meta[content="IE=edge,chrome=1" http-equiv="X-UA-Compatible"]
    meta[content="#{twitter_page_title}" name="twitter:description"]
    meta[content="#{page_title}" name="description"]
    title = page_title
    style type="text/css"
      == Rouge::Themes::Base16.mode(:dark).render(scope: '.highlight')
