          .navbar-inner
            .container
              a.navbar-brand href="/" Ruby Object Mapper
              ul.nav.navbar-nav
                = nav_link("/learn", "Learn")
                = nav_link("/adapters", "Adapters")
                li.dropdown == api_docs_nav
                = nav_link("/blog", "Blog")
                = nav_link("/contribute", "Contribute")
                = nav_link("/status", "Status")
                = nav_link("/backers", "Backers <3")
